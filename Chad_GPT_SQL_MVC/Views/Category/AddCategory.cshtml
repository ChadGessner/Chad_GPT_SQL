@model Category

<div class="alert-primary p-4">
    <form method="post" class="card alert-success">
        <div class="row p-4">
            <label asp-for="@Model.CategoryName" class="form-label"></label>
            <input 
                type="text"
                asp-for="@Model.CategoryName"
                name="CategoryName"
                class="form-control" />
        </div>
        <div class="row p-4">
            <label asp-for="@Model.Type" class="form-label"></label>
            <select name="Type" asp-for="@Model.Type" type="number">
                <option value="1">1</option>
                <option value="2">2</option>
            </select>
        </div>
        <div class="row btn-group p-4">
            <button 
                asp-action="AddCategory"
               class="btn btn-success" type="submit" >Add Category </button>
        </div>
    </form>
</div>
